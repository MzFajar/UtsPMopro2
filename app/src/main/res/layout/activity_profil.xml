<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4682B4"
    tools:context=".ProfilActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="8dp"
        android:text="My Profil"
        android:textColor="#F5F5DC"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="294dp"
        android:layout_below="@id/textView"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/profil" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_alignParentTop="false"
        android:paddingLeft="20dp"
        android:text="Nama : Mz. Fajar"
        android:textColor="#F5F5DC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:paddingLeft="20dp"
        android:text="Nim : 1167050110"
        android:textColor="#F5F5DC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:paddingLeft="20dp"
        android:text="No. Hp : 08991169615"
        android:textColor="#F5F5DC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:paddingLeft="20dp"
        android:text="Alamat : Purwakarta"
        android:textColor="#F5F5DC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:paddingLeft="20dp"
        android:text="Sosmed : ig @mzfajar"
        android:textColor="#F5F5DC"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:background="#5F9EA0"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="50dp"
            android:background="#5F9EA0"
            android:src="@drawable/ig" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:background="#5F9EA0"
            android:src="@drawable/loc" />

    </LinearLayout>
</RelativeLayout>